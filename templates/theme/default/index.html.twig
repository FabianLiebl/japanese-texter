{% extends 'theme/base.html.twig' %}

{% block header %}
    <header>
        <a href="{{ path('app_default_index') }}" class="undecorated-link"><h1>Japanese Texter</h1></a>
        <a href="{{ path('app_frontend_training_index') }}" class="undecorated-link training-link"><h2>Training</h2></a>
    </header>
{% endblock %}

{% block body_class %}class="no-scroll"{% endblock %}

{% block main %}
    <div class="tag-filter-area" data-filter-area>
        <ul class="tags favorite-tags" data-favorite-tags>
            {% include 'theme/default/_tags.html.twig' with { 'tags': favoriteTags } %}
        </ul>
        <ul class="tags normal-tags" data-tags>
            {% include 'theme/default/_tags.html.twig' with { 'tags': tags } %}
        </ul>
    </div>
    <div class="letter-area-container">
        <div class="letter-area" data-letter-area>
            {% include 'theme/default/_lines.html.twig' with { 'lines': lines } %}
        </div>
    </div>
    <div class="output-area" data-output-area>
        <textarea class="output-text-area" data-output-field></textarea>
    </div>
{% endblock %}
