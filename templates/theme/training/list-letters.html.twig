{% extends 'theme/base.html.twig' %}

{% block main %}
    <div class="training-list-letters" data-training-letters>
        <div class="list-letters-container">
            <h2>{{ training.name }} letters</h2>
            <div class="letters-container">
                {% for letter in training.letters %}
                    <div class="letter {{ letter.scoreClass }}" data-letter>
                        <span class="symbol">{{ letter.letter.letter }}</span>
                        <span class="sound">{{ letter.letter.sound }}</span>
                        <span class="score" data-score>{{ letter.score }}</span>
                        <a class="change-score plus" href="{{ path('app_frontend_training_change_letter_score', { letterId: letter.id, value: 5 }) }}" data-change-score>+</a>
                        <a class="change-score minus" href="{{ path('app_frontend_training_change_letter_score', { letterId: letter.id, value: -5 }) }}" data-change-score>-</a>
                    </div>
                {% endfor %}
            </div>
            <div class="back-link">
                <a href="{{ path('app_frontend_training_index') }}" class="link undecorated-link">&lt; Back to Index</a>
            </div>
        </div>
    </div>
{% endblock %}
